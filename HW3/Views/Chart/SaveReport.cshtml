@{
    ViewBag.Title = "Save Report";
}

<div>
    <h2>Save Report</h2>

    @using (Html.BeginForm("SaveReport", "Chart", FormMethod.Post))
    {
        <div>
            <label for="txtContent">Report Content:</label>
            <textarea id="txtContent" name="txtContent" rows="10" cols="40"></textarea>
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Save Report</button>
        </div>
    }
</div>
